<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3E4"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".week2.QuestionActivity"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/question_text"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:background="#D7E1E3"
        android:layout_marginTop="40dp"
        android:hint="@string/questions"
        android:textSize="28sp" />
    <EditText
        android:id="@+id/answer_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:background="#D7E1E3"
        android:hint="@string/hint"
        android:inputType="text"

        android:textSize="22sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="#F4F3E4"
                android:drawableTop="@mipmap/left"
                android:text="@string/pre_button"
                android:textSize="19sp" />

                        <ToggleButton
                            android:id="@+id/lock"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/locklock_selector" />

                        <Button
                            android:id="@+id/prompt_call"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="50dp"
                            android:background="@drawable/prompt_call_selector" />


                        <Button
                            android:id="@+id/next"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#F4F3E4"
                            android:drawableTop="@mipmap/right"
                            android:layout_marginLeft="40dp"
                            android:text="@string/next_button"
                            android:textSize="19sp"
                            />
            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="#F4F3E4"
                android:drawableTop="@mipmap/rabbit"
                android:text="@string/submit" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>